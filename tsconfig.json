{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    /* Modules */
    "module": "nodenext",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
